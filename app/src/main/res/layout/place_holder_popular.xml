<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.airhomestays.app.util.binding.BindingConverters"/>
        <import type="android.view.View"/>
        <variable
            name="image"
            type="String"/>
        <variable
            name="roomType"
            type="String"/>
        <variable
            name="title"
            type="String"/>
        <variable
            name="bedsCount"
            type="String" />
        <variable
            name="bookingType"
            type="String"/>
        <variable
            name="reviewsStarRating"
            type="Integer"/>
        <variable
            name="reviewsCount"
            type="Integer"/>
        <variable
            name="ratingStarCount"
            type="Integer"/>
        <variable
            name="currency"
            type="String"/>
        <variable
            name="wishListStatus"
            type="Boolean"/>
        <variable
            name="isOwnerList"
            type="Boolean"/>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="heartClickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="locale"
            type="java.util.Locale"/>
        <variable
            name= "ratingsCount"
            type="String"/>
    </data>

<!--            android:background="@drawable/curve_bg"
-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layoutDirection="locale"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/popimage"
            android:layout_width="@dimen/pop_loc"
            android:layout_height="170dp"
            android:background="@drawable/bg_corner_gray"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="@dimen/pop_loc"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:padding="0.2dp"
            android:alpha="0.3"
            android:background="@drawable/grad_alpha"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginBottom="15dip"
            android:ellipsize="end"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_gravity="bottom|center_horizontal"
            android:maxLines="1"
            android:padding="12dip"
            android:textStyle="bold"
            android:background="@drawable/placeholder_text"
            android:textSize="@dimen/text_size_13"
            android:textDirection="locale"
            android:textColor="#ffffffff" />
    </FrameLayout>
</layout>