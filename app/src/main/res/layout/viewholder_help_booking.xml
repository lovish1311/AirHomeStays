<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <data>
       <variable
           name="handlers"
           type="com.airhomestays.app.ViewholderHelpBooking.Handlers" />
   </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_help_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need help with your booking?"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_call_to_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call to book homestay or enquire"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> handlers.onCallUsNowClick()}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_call_us_now"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_call_now" />

                <TextView
                    android:id="@+id/tv_call_us_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Call us now"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>
