<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.airhomestays.app.util.binding.BindingConverters"/>
        <import type="android.view.View"/>
        <variable
            name="url"
            type="String" />
        <variable
            name="title"
            type="String" />
        <variable
            name="type"
            type="String" />
        <variable
            name="reviewsCount"
            type="Integer" />
        <variable
            name="price"
            type="String" />
        <variable
            name="reviewsStarRating"
            type="Integer" />
        <variable
            name="bookingType"
            type="String" />
        <variable
            name="wishListStatus"
            type="Boolean"/>
        <variable
            name="heartVisible"
            type="Boolean"/>
        <variable
            name="isOwnerList"
            type="Boolean"/>
        <variable
            name="roomType"
            type="String"/>
        <variable
            name="maxGuestSimilarListing"
            type="String" />
        <variable
            name = "bedroomsSimilarListing"
            type = "String" />
        <variable
            name = "sleepsSimilarListing"
            type = "String" />
        <variable
            name = "additionalGuestSimilarListing"
            type = "String" />
        <variable
            name="visibilitySimilarListing"
            type="Integer" />
        <variable
            name= "ratingsCount"
            type="String"/>
        <variable
            name="ratingStarCount"
            type="Integer"/>
        <variable
            name="bedsCount"
            type="Integer"/>
        <variable
            name="bookType"
            type="String"/>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="heartClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:onClick="@{clickListener}"
        android:layoutDirection="locale">

        <ImageView
            android:id="@+id/iv_item_listing_similar_image"
            imgListing="@{url}"
            android:layout_width="258dp"
            android:layout_height="172dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_item_listing_heart"
            isOwnerList="@{isOwnerList}"
            isWishList="@{wishListStatus}"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:onClick="@{heartClickListener}"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_item_listing_similar_image"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_item_explore_search_listing_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/be_vietnampro_semibold"
                android:text="@{price}"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_19" />

            <TextView
                android:id="@+id/tv_item_listing_similar_price_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_item_explore_search_listing_price"
                android:layout_marginBottom="3dp"
                android:layout_toEndOf="@id/tv_item_explore_search_listing_price"
                android:fontFamily="@font/be_vietnampro_medium"
                android:text="@{` / ` + @string/night}"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_13" />

            <ImageView
                android:id="@+id/iv_item_listing_instant_image"
                instantBook="@{bookingType}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_item_listing_similar_price_night"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="3dp"
                android:layout_toEndOf="@id/tv_item_listing_similar_price_night"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_item_listing_similar_max_guests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_item_explore_search_listing_price"
                android:layout_toEndOf="@id/iv_item_listing_instant_image"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/be_vietnampro_medium"
                android:text="@{maxGuestSimilarListing}"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_13" />

            <ImageView
                android:id="@+id/tv_item_listing_similar_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                android:layout_toStartOf="@+id/tv_item_listing_similar_ratingNumber"
                android:src="@drawable/ic_star_red"
                android:visibility="@{ratingStarCount==0?View.INVISIBLE:View.VISIBLE}" />

            <TextView
                android:id="@+id/tv_item_listing_similar_ratingNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@{ratingStarCount.toString()}"
                android:textColor="@color/text_color"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_13"
                android:visibility="@{ratingStarCount==0?View.INVISIBLE:View.VISIBLE}" />

            <TextView
                android:id="@+id/tv_item_explore_search_listing_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_explore_search_listing_price"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:fontFamily="@font/be_vietnampro_medium"
                android:maxLines="2"
                android:text="@{title}"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tv_item_explore_search_listing_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_explore_search_listing_title"
                android:layout_marginTop="3dp"
                android:text="@{type + ` / ` + bedroomsSimilarListing + ` / ` + sleepsSimilarListing}"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/tv_item_explore_search_listing_additional_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_explore_search_listing_type"
                android:layout_marginTop="3dp"
                android:text="@{additionalGuestSimilarListing}"
                android:visibility="@{visibilitySimilarListing}"
                android:textColor="@color/status_bar_color"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_13" />



        </RelativeLayout>


    </RelativeLayout>

