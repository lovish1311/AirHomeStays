<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_corner_gray">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:paddingStart="30dp"
            android:paddingTop="30dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp">


            <TextView
                android:id="@+id/txt_hosting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="90dp"
                android:ellipsize="end"
                android:fontFamily="@font/be_vietnampro_semibold"
                android:maxLines="3"
                android:background="@drawable/placeholder_text"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_h4"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_hosting"
                android:layout_marginTop="20dp"
                android:background="@drawable/placeholder_text"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingTop="5dp"
                android:paddingEnd="20dp"
                android:paddingBottom="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/be_vietnampro_medium"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>