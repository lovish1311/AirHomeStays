<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_inbox_root"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@color/listing_bottom_color"
        android:layoutDirection="locale">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/placeholder_inbox_receiver" />

        <LinearLayout
            android:id="@+id/ll_inbox_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:layout_toEndOf="@id/iv_avatar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_inbox_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/be_vietnampro_medium"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textDirection="locale"
                    android:background="@drawable/placeholder_text"
                    android:textSize="@dimen/text_size_h1"/>

                <TextView
                    android:id="@+id/tv_inbox_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_inbox_name"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:textColor="@color/search_text_color"
                    android:background="@drawable/placeholder_text"
                    android:textSize="@dimen/text_size_h1"
                    android:textDirection="locale" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>