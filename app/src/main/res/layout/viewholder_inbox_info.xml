<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="info"
            type="String"/>
        <variable
            name="date"
            type="String"/>
        <variable
            name="noOfExtra"
            type="String"/>
        <variable
            name="status"
            type="String"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layoutDirection="locale">

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/gray_divider_light" />

        <RelativeLayout
            android:id="@+id/container_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_centerHorizontal="true">
            <RelativeLayout
                android:id="@+id/status1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/ic_circle"
                    statusInbox="@{info}"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="7dp"
                    android:src="@drawable/ic_circle" />

                <TextView
                    android:id="@+id/info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/ic_circle"
                    android:textSize="@dimen/text_size_h1_5"
                    android:textColor="@color/black"
                    android:text="@{info}"
                    android:textDirection="locale"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/text_size_h1"
                android:layout_below="@id/status1"
                android:text="@{date}"
                android:textDirection="locale"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/text_size_h1"
                android:layout_below="@id/tvDate"
                android:text="@{noOfExtra}"
                android:textDirection="locale"/>
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/container_status"
            android:background="@color/gray_divider_light" />
    </RelativeLayout>
</layout>