<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="ratingTotal"
            type="Double"/>
        <variable
            name="reviewsTotal"
            type="Integer"/>
        <variable
            name="imgUrl"
            type="String" />
        <variable
            name="name"
            type="String" />
        <variable
            name="title"
            type="String" />
        <variable
            name="date"
            type="String" />
        <variable
            name="comment"
            type="String" />
        <variable
            name="padding"
            type="Boolean" />
        <variable
            name="isAdmin"
            type="Boolean"/>
        <variable
            name="onAvatarClick"
            type="android.view.View.OnClickListener" />
        <variable
            name="onTextClick"
            type="android.view.View.OnClickListener" />
        <variable
            name="viewModel"
            type="com.airhomestays.app.ui.profile.review.ReviewViewModel" />
        <variable
            name="type"
            type="String" />
        <variable
            name="ltrDirection"
            type="Boolean" />
        <variable
            name="profileId"
            type="Integer" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:layoutDirection="locale">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingEnd="20dp"
            android:background="@drawable/curve_button_gray_outline_large">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_circle_image"
                img="@{imgUrl}"
                isAdmin="@{isAdmin}"
                android:layout_width="49.5dp"
                android:layout_height="50dp"
                android:onClick="@{onAvatarClick}"
                android:src="@drawable/placeholder_avatar" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleX="@{ltrDirection?1:-1}"
                android:layout_alignBottom="@+id/ll_text_content"
                android:layout_alignTop="@+id/img_circle_image"/>
            <TextView
                android:id="@+id/tv_name"
                title="@{title}"
                isAdmin="@{isAdmin}"
                isListing="@{false}"
                viewModels="@{viewModel}"
                listId="@{profileId}"
                spanString="@{name}"
                type="@{type}"
                android:layout_width="wrap_content"
                android:onClick="@{onTextClick}"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_circle_image"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/be_vietnampro_medium"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/tv_item_listing_similar_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@id/tv_name"
                android:layout_alignBottom="@id/img_circle_image"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/img_circle_image"
                android:numStars="5"
                android:progressTint="@color/status_bar_color"
                android:secondaryProgressTint="@color/status_bar_color"
                android:src="@drawable/ic_star_red"
                android:stepSize="1" />

            <TextView
                android:id="@+id/tv_review_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_below="@id/tv_name"
                android:layout_marginBottom="4dp"
                android:layout_alignTop="@id/tv_item_listing_similar_rating"
                android:layout_alignBottom="@id/tv_item_listing_similar_rating"
                android:layout_toEndOf="@id/tv_item_listing_similar_rating"
                android:text="@{ratingTotal.toString()}"
                android:textColor="@color/text_color_3b"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_circle_image"
                android:layout_marginTop="10dp"
                android:text="@{comment}"
                android:textColor="@color/text_color_3b"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_13" />

            <TextView
                memberSinceComma="@{date}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_comment"
                android:textColor="@color/text_gray_color"
                android:textDirection="locale"
                android:textSize="@dimen/text_small" />

            <RelativeLayout
                android:id="@+id/ll_text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="60dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp">


            </RelativeLayout>
        </RelativeLayout>



            </RelativeLayout>

</layout>
