<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layoutDirection="locale"
        android:background="@drawable/container_trips">

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel_textViews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_host_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="100dp"
                    android:background="@drawable/placeholder_text"
                    android:textColor="@color/black"
                    android:textDirection="locale"
                    android:textSize="@dimen/text_size_13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_host_name"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/placeholder_text"
                    android:textColor="@color/black"
                    android:textDirection="locale"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_date"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/placeholder_text"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textDirection="locale"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="100dp"
                    android:background="@drawable/placeholder_text"
                    android:textColor="@color/black"
                    android:textDirection="locale"
                    android:textSize="@dimen/text_size_13" />


            </RelativeLayout>


            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/rel_textViews"
                android:layout_marginTop="10dp"
                android:background="@color/container_trips_menu" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider2"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/placeholder_text"
                android:drawablePadding="3dp"
                android:paddingStart="10dp"
                android:paddingTop="1dp"
                android:paddingEnd="10dp"
                android:paddingBottom="3dp"
                android:textColor="@color/white"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_13" />

            <RelativeLayout
                android:id="@+id/rel_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/ic_contact_support"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/placeholder_text"
                    android:drawablePadding="7dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="3dp"
                    android:textDirection="locale"
                    android:textSize="@dimen/text_size_13" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>