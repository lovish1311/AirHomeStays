<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />
    <ImageView
        android:id="@+id/image2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:adjustViewBounds="true"
        android:layout_gravity="bottom"
        android:scaleType="centerCrop"
        android:src="@drawable/gradient_black"/>
    <TextView
        android:id="@+id/sliding_texts"
        android:adjustViewBounds="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:padding="20dp"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_h5"
        android:textColor="@color/white_photo_story"
        android:layout_gravity="center|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textDirection="locale"/>
    <TextView
        android:id="@+id/list_your_space"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/curve_button_red"
        android:fontFamily="@font/linetocircular"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center|bottom"
        android:text="@string/list_your_space"
        android:textColor="@android:color/white"
        android:textDirection="locale"
        android:textSize="@dimen/text_size_h2"/>
</FrameLayout>