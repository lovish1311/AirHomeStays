<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

<!--            android:background="@drawable/curve_bg"
-->
    <RelativeLayout
        android:id="@+id/placeholder"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layoutDirection="locale">

        <ImageView
            android:id="@+id/iv_item_listing_similar_image_placeholder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/photo_size"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_image_placeholder"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/iv_item_listing_similar_image_placeholder"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/tv_item_listing_similar_type_placeholder"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/placeholder_text"
                android:ellipsize="end"
                android:singleLine="true"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_h1" />

            <TextView
                android:id="@+id/tv_item_listing_similar_title_placeholder"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_listing_similar_type_placeholder"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/placeholder_text"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_h1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_listing_similar_price_placeholder"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_listing_similar_title_placeholder"
                android:layout_marginTop="10dp"
                android:background="@drawable/placeholder_text"
                android:textColor="@color/colorAccent"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_h1" />
        </RelativeLayout>
    </RelativeLayout>
</layout>